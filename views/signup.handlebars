            <div class="row">
                <form id="signup-form" class="col s7">
                    <div class="row">
                        <div class="input-field col s4">
                            <input id="signup-firstName" type="text" class="validate">
                            <label for="signup-firstName">First Name</label>
                        </div>
                        <div class="input-field col s4">
                            <input id="signup-lastName"  type="text" class="validate">
                            <label for="signup-lastName">Last Name</label>
                        </div>
                    </div>
                    <div class="row">
                        <div class="input-field col s8">
                            <input value="" id="signup-address" type="text" class="validate">
                            <label for="signup-address">Address</label>
                        </div>
                    </div>
                    <div class="row">
                        <div class="input-field col s8">
                            <input id="signup-password" type="password" class="validate">
                            <label for="signup-password">Password</label>
                        </div>
                    </div>
                    <div class="row">
                        <div class="input-field col s8">
                            <input id="signup-email" type="email" class="validate">
                            <label for="signup-email">Email</label>
                        </div>
                    </div>
                    <button class="btn waves-effect waves-light" type="submit" name="action">Register
                        <i class="material-icons right">send</i>
                    </button>
                </form>
            </div>

